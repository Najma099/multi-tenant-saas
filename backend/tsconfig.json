{
  "compilerOptions": {
    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Runtime */
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Node support */
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,

    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Output */
    "sourceMap": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
